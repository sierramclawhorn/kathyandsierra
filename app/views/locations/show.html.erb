<% if current_user!= nil && (current_user.username == 'sierramclawhorn' || current_user.username == 'kathybui') %>
  <div class='adminPrivate'>
    <%= link_to 'New Post', new_location_post_path(@location.id) %>
  </div>
<% end %>
  <br><br>



<% if @location.posts.length == 0 %>
  <h1><%= @location.name %><br>
  Coming Soon...</h1>
<% end %>



<div class='posts'>

    <% @posts.each do |post| %>
      <div class='imgWrap'>
      <%= image_tag('/sanfrancisco/bernalheights.jpg', class: 'postImg') %>
          <span class='titleDate'>
              <h1 class='titlespacing'><%= post.title %></h1>
              <h3><%= post.date %></h3>
          </span>
      </div>

      <div class='postText' style="display: none">
        <%= render 'posts/show' %>
      </div>
    <% end %>


</div>
